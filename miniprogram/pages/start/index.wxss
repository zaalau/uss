.mengban {
  font-family: 'num';
  position: fixed;
  width: 750rpx;
  background-color: #000;
  z-index: 3;
  padding: 65% 0 0 0;
  /* color:  rgba(255, 0, 255, 0.6); */
  color:  rgba(255, 0, 255,0.8);
  text-shadow:
  1px 1px 2px rgb(0, 255, 0),
  0 0 1em rgba(0, 0, 255, 0.719),
  0 0 0.2em rgba(0, 0, 255, 0.719);
  text-align: center;
  font-size: 110rpx;
  line-height: 130rpx;
  animation: pulse 3s linear infinite;
  
}

@keyframes pulse {
  from { filter: hue-rotate(0); }
  to { filter: hue-rotate(360deg); }
}
.mengbantext {
  animation: fly 0.2s linear;

}
@keyframes fly {
  from { 
    transform: rotate(0); 
  }
  to { 
    transform: rotate(360deg); 
  }
}
